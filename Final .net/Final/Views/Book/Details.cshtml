        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book_type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book_type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
