@model Final.Models.Books

@{
    ViewData["Title"] = "Details";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Book details</title>
    <link rel="stylesheet" asp-href-include="twitter-bootstrap/css/bootstrap.css" />
</head>
<h1>Details</h1>

<div>
