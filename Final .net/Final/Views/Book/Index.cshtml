@model IEnumerable<Final.Models.Books>

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store Admin</title>
    <link rel="stylesheet" asp-href-include="twitter-bootstrap/css/bootstrap.css" />
</head>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book_image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Book_image)" alt="books" width="100px" />  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
