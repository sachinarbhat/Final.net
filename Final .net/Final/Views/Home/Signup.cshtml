@model Final.Models.Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sign-Up Form</title>
    <link rel="stylesheet" asp-href-include="lib/Signupstyle.css" />

</head>
<body>
    <!-- partial:index.partial.html -->
    <!DOCTYPE html>
    <html>
    <head>
        <title>Slide Navbar</title>
        <link rel="stylesheet" type="text/css" href="slide navbar style.css">
        <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="main">
            <input type="checkbox" id="chk" aria-hidden="true">

            <div class="signup">
                <form>
                    <label for="chk" aria-hidden="true">Sign up</label>
                    <input type="text" class="form-control" asp-for="User_name" required placeholder="User Name" />
                    <input type="text" class="form-control" asp-for="User_id" required placeholder="User Id" />
                    <input type="password" class="form-control" asp-for="User_password" placeholder="Password" required />
                    <button type="submit" onclick="fun()" asp-action="Signup">Sign up</button>
                    <span style="color:aliceblue;">If you are admin? Please click</span> <a style="color:dodgerblue;" asp-action="AdminLogin">Here</a>
                </form>
            </div>

            <div class="login">
                <form>
                    <label for="chk" aria-hidden="true">Login</label>
                    <input type="text" asp-for="LoginEmail" placeholder="User Id" required="">
                    <input type="password" asp-for="LoginPassword" placeholder="Password" required="">
                    <button type="submit" onclick="fun1()" asp-action="Login">Log In</button>
                </form>
            </div>
        </div>
    </body>
</html>
<!-- partial -->

</body>
<script>
            function fun() {
                        var result = @ViewBag.Result
                            console.log(result);
                         if (result == 1) {
                            alert("Signup sucessfull");
                            }
                            }
            function fun1() {
                       var query = @ViewBag.Query
                             console.log(query);
                         if (query!= 1) {
                             alert("Please enter valid email and password");
                         }
                         else {
                             alert("login sucessfull redirecting to home page");
                         }
                          }
</script>
</html>

