@model Final.Models.Cart

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>ADO - Create Inventory</title>
        <link rel="stylesheet" asp-href-include="twitter-bootstrap/css/bootstrap.css" />
    </head>
</head>
<body>

<h3>Are you sure you want to delete this from cart?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book_image)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Book_image)" alt=" image" style="width:300px;"/>    
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cart_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Cart">Back to Cart</a>
    </form>
</div>
</body>
</html>
